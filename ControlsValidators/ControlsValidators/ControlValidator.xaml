<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="ControlsValidators.ControlValidator"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <StackLayout>
            <Label
                x:Name="descriptionValidator"
                FontAttributes="Bold"
                FontSize="Medium" />
            <Entry
                x:Name="entryValidator"
                FontSize="Medium"
                Text="Carlos" />
            <Label
                x:Name="errorMessage"
                FontSize="Small"
                TextColor="Red" />
        </StackLayout>
    </ContentView.Content>
</ContentView>